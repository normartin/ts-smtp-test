{
  "name": "ts-smtp-test",
  "version": "1.0.7",
  "license": "MIT",
  "description": "smtp server for integration testing",
  "repository": "https://github.com/normartin/ts-smtp-test",
  "bugs": "https://github.com/normartin/ts-smtp-test/issues",
  "keywords": [
    "smtp",
    "test",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "main": "dist/smtp-test-server.js",
  "types": "dist/smtp-test-server.d.ts",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "cleanup": "del-cli dist reports",
    "prebuild": "npm run cleanup",
    "build": "tsc",
    "test": "mocha",
    "posttest": "npm run tslint",
    "tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "coverage": "nyc mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "validate": "npm run tslint && npm run coverage",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "dependencies": {
    "mailparser": "^2.7.7",
    "smtp-server": "^3.6.0",
    "ts-retry-promise": "^0.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mailparser": "^2.7.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/nodemailer": "^6.4.0",
    "@types/smtp-server": "^3.5.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "del-cli": "^3.0.0",
    "mocha": "^7.1.1",
    "nodemailer": "^6.4.6",
    "nyc": "^15.0.1",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "reports/coverage"
  }
}
